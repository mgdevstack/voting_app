build:
  type: text
  content: >-
    #!/bin/sh


    cd $ROOST_WORK_DIR/git/mgdevstack/voting_app


    docker build -f ballot/Dockerfile -t ballot:$ROOST_ENV_ID .

    docker build -f voter/Dockerfile -t voter:$ROOST_ENV_ID

    docker build -f ecserver/Dockerfile -t ecserver:$ROOST_ENV_ID .

    docker build -f election-commission/Dockerfile -t election-commission:$ROOST_ENV_ID .

    docker build -f service-test-suite/Dockerfile -t service-test-suite:latest .
deploy:
  type: text
  content: >-
    #!/bin/sh


    cd $ROOST_WORK_DIR/git/mgdevstack/voting_app


    helm install helm-vote -n $ROOST_NAMESPACE --generate-name --set clusterIP=$ROOST_CLUSTER_IP --set tag=$ROOST_ENV_ID


    kubectl apply -f service-test-suite/test-suite.yaml
test:
  - name: voter
    configType: cypress
    configPath: service-test-suite/voter
